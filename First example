/* Write a C program to calculate average of thrree numbers. Display the real value of average */

#include <stdio.h>

void main()
{
    /*declaration section */
int a,b,c;
float d;
    /*definitive section */

    printf("plese enter the value for a\n");
        scanf("%d",&a);
    printf("plese enter the value for b\n");
        scanf("%d",&b);
    printf("plese enter the value for c\n");
        scanf("%d",&c);
    d=(float)(a+b+c)/3;


    printf("The average is %f",d);

}
